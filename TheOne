//This is the new file

//Controller->UserController.java

@RestController
public class UserController {
    @Autowired
    private UserMapper userMapper;

    @PostMapping("/user")
    public String SaveUserById(User user) {
        System.out.println("添加用户 user:" + user);
        return "添加用户";
    }

    @GetMapping("/user")
    public String queryUser() {
        List<User> userList = userMapper.query();

        System.out.println("用户 userList:" + userList);
        return "查询用户：" + userList;
    }

    @GetMapping("/user/{id}")
    public String GetUserById(@PathVariable String id) {
        System.out.println("根据Id获取用户 id:" + id);
        return "根据Id获取用户 id:" + id;
    }

    @PutMapping("/user")
    public String UpdateUserById(User user) {
        System.out.println("修改用户 user:" + user);
        return "修改用户";
    }

    @DeleteMapping("/user/{id}")
    public String DeleteUserById(@PathVariable String id) {
        System.out.println("根据Id删除用户 id:" + id);
        return "根据Id删除用户 id:" + id;
    }
}
